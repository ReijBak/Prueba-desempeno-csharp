@model Prueba_desempeno_csharp.Models.Appointment

<div class="row">
    <div class="col-md-6">
        <div class="card p-4">
            <h3>Edit medic</h3>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PatientId" />

                <div class="mt-3">
                    <label asp-for="DateTime" class="form-label"></label>
                    <input asp-for="DateTime" class="form-control" />
                </div>
                
                <input type="hidden" asp-for="State" />
                
                <div class="mt-3">
                    <label asp-for="MedicId" class="form-label"></label>
                    <input asp-for="MedicId" class="form-control" />
                </div>
                
                <div class="mt-3">
                    <label asp-for="Observations" class="form-label"></label>
                    <input asp-for="Observations" class="form-control" />
                </div>

                <hr />
                <button type="submit" class="btn btn-success">Save changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>