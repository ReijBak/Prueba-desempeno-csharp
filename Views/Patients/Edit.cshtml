@model Prueba_desempeno_csharp.Models.Patient

<div class="row">
    <div class="col-md-6">
        <div class="card p-4">
            <h3>Edit patient</h3>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mt-3">
                    <label asp-for="Names" class="form-label"></label>
                    <input asp-for="Names" class="form-control" />
                </div>

                <div class="mt-3">
                    <label asp-for="LastNames" class="form-label"></label>
                    <input asp-for="LastNames" class="form-control" />
                </div>

                <div class="mt-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                
                <div class="mt-3">
                    <label asp-for="Phone" class="form-label"></label>
                    <input asp-for="Phone" class="form-control" />
                </div>

                <hr />
                <button type="submit" class="btn btn-success">Save changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>