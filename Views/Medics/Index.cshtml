@model IEnumerable<Prueba_desempeno_csharp.Models.Medic>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">

                <form asp-action="Index" method="get" class="d-flex mb-3">
                    <input type="text" name="speciality" value="@ViewBag.CurrentFilter" 
                           class="form-control me-2" placeholder="Filter by speciality...">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
                </form>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }

                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>SPECIALITY</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var medic in Model)
                        {
                            <tr>
                                <td>@medic.Id</td>
                                <td>@medic.Name</td>
                                <td>@medic.Speciality</td>
                                <td>
                                    <a asp-controller="Medics" asp-action="Details" asp-route-id="@medic.Id" class="btn btn-info">Details</a>
                                    <a asp-controller="Medics" asp-action="Edit" asp-route-id="@medic.Id" class="btn btn-warning">Edit</a>
                                    <form id="deleteForm-@medic.Id" asp-action="Delete" asp-route-id="@medic.Id" method="post" class="d-inline">
                                        <button type="button" class="btn btn-danger" onclick="confirmDelete(@medic.Id)">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script>
                    function confirmDelete(id) {
                        Swal.fire({
                            title: "Are you sure?",
                            text: "This action cannot be undone!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#d33",
                            cancelButtonColor: "#616161",
                            confirmButtonText: "Yes, delete it!"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                document.getElementById("deleteForm-" + id).submit();
                            }
                        });
                    }
                </script>

            </div>
        </div>
    </div>

    <!-- FORMULARIO PARA CREAR MÉDICO -->
    <div class="col-md-4">
        <div class="card p-2">
            <div class="card-body px-4">
                <form asp-action="Create" method="post">
                    <h3>Register a medic</h3>
                    <div class="mt-4">
                        <label>Id</label>
                        <input type="number" name="Id" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label>Name</label>
                        <input type="text" name="Name" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label>Email</label>
                        <input type="text" name="Email" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label>Speciality</label>
                        <input type="text" name="Speciality" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label>Phone</label>
                        <input type="text" name="Phone" class="form-control">
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100">Save info</button>
                </form>
            </div>
        </div>
    </div>
</div>
